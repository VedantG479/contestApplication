<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Orders.Choose_Squad_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player1 ID"
                android:inputType="number"
                android:id="@+id/player1ID"
                android:gravity="center"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player2 ID"
                android:inputType="number"
                android:id="@+id/player2ID"
                android:gravity="center"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player3 ID"
                android:inputType="number"
                android:id="@+id/player3ID"
                android:gravity="center"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player4 ID"
                android:inputType="number"
                android:id="@+id/player4ID"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player1 Name"
                android:singleLine="true"
                android:id="@+id/player1N"
                android:gravity="center"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player2 Name"
                android:singleLine="true"
                android:id="@+id/player2N"
                android:gravity="center"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player3 Name"
                android:singleLine="true"
                android:id="@+id/player3N"
                android:gravity="center"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Player4 Name"
                android:singleLine="true"
                android:id="@+id/player4N"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Join"
        android:layout_gravity="center"
        android:id="@+id/joinBtn"/>
</LinearLayout>